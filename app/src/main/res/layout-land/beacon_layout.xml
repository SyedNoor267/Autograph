<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/form_padding_sides"
            android:paddingRight="@dimen/form_padding_sides"
            android:background="@drawable/background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Associate HOOKE gagdet to your ACCOUNT"
                android:textSize="@dimen/gadget_header_text"
                android:gravity="center"
                android:textColor="#FFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/form_padding_sides"
            android:paddingRight="@dimen/form_padding_sides"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
                <ImageView
                    android:id="@+id/start_camera"
                    android:layout_width="@dimen/start_camera"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gadget"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/gadget_button_spacing"/>
                <!--<ImageView
                    android:id="@+id/add_gadget"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:src="@drawable/add_gadget"
                    android:adjustViewBounds="true"
                    android:layout_margin="10dp"/>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/add_gadget"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/button_background"
                    android:layout_margin="@dimen/gadget_button_spacing"
                    android:paddingRight="@dimen/gadget_button_padding_sides"
                    android:paddingLeft="@dimen/gadget_button_padding_sides"
                    android:paddingTop="@dimen/form_field_padding_vertical"
                    android:paddingBottom="@dimen/form_field_padding_vertical"
                    android:text="Add Gadget"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:textSize="@dimen/form_text_size"/>
                <Button
                    android:id="@+id/set_as_beacon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/button_background"
                    android:layout_margin="@dimen/gadget_button_spacing"
                    android:paddingRight="@dimen/gadget_button_padding_sides"
                    android:paddingLeft="@dimen/gadget_button_padding_sides"
                    android:paddingTop="@dimen/form_field_padding_vertical"
                    android:paddingBottom="@dimen/form_field_padding_vertical"
                    android:text="Activate my device as beacon"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:textSize="@dimen/form_text_size"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logout_footer"
        android:gravity="center"
        android:layout_gravity="center"
        android:baselineAligned="true"
        android:background="@drawable/bottom_background"
        android:paddingLeft="@dimen/form_padding_sides"
        android:paddingRight="@dimen/form_padding_sides">
        <!--<ImageView
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"
            android:layout_margin="10dp"/>-->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:layout_margin="@dimen/gadget_button_spacing"
            android:paddingRight="@dimen/gadget_button_padding_sides"
            android:paddingLeft="@dimen/gadget_button_padding_sides"
            android:paddingTop="@dimen/form_field_padding_vertical"
            android:paddingBottom="@dimen/form_field_padding_vertical"
            android:text="Log out"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:textSize="@dimen/form_text_size"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_up"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_back2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/layout_back2">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/friends"
                    android:layout_gravity="center|top"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textSize="18sp"
                    android:textColor="@color/defaultAppColor"/>
                <TextView
                    android:id="@+id/number_of_friends_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.4K"
                    android:textSize="13sp"
                    android:textColor="@color/colorblack"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:weightSum="6">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/layout_back2">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center|top"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/defaultAppColor"/>
                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sempa Jonathan"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/colorblack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/layout_back2">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/calendar"
                        android:layout_gravity="center|top"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="D.O.B"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="@color/defaultAppColor"/>
                    <TextView
                        android:id="@+id/date_of_birth_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="29/02/2019"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/colorblack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/layout_back2">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/gender"
                        android:layout_gravity="center|top"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="@color/defaultAppColor"/>
                    <TextView
                        android:id="@+id/gender_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorblack"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_profile_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/form_button_side_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/form_button_side_margin"
                    android:background="@drawable/btn_back1"
                    android:text="Edit Profile"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/form_text_size"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme" />
                <Button
                    android:id="@+id/privacy_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/form_button_side_margin"
                    android:layout_marginTop="@dimen/form_field_text_spacing"
                    android:layout_marginRight="@dimen/form_button_side_margin"
                    android:background="@drawable/btn_back1"
                    android:text="Privacy"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/form_text_size"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme" />
                <Button
                    android:id="@+id/families_hooke_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/form_button_side_margin"
                    android:layout_marginTop="@dimen/form_field_text_spacing"
                    android:layout_marginRight="@dimen/form_button_side_margin"
                    android:background="@drawable/btn_back1"
                    android:text="Families Hooke"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/form_text_size"
                    android:shadowColor="@color/defaultAppColor"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme" />
                <Button
                    android:id="@+id/terms_and_conditions_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/form_button_side_margin"
                    android:layout_marginTop="@dimen/form_field_text_spacing"
                    android:layout_marginRight="@dimen/form_button_side_margin"
                    android:background="@drawable/btn_back1"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/form_text_size"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme" />
                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/form_button_side_margin"
                    android:layout_marginTop="@dimen/form_field_text_spacing"
                    android:layout_marginRight="@dimen/form_button_side_margin"
                    android:background="@drawable/btn_back1"
                    android:text="Log Out"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/form_text_size"
                    android:textAllCaps="false"
                    android:theme="@style/AppTheme" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>